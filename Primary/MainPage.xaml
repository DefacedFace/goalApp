<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Primary.MainPage"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackLayout>
            <Label Text="Primary"
                   FontSize="25"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
        </StackLayout>
        <StackLayout Grid.Row="0"
                     VerticalOptions="Center">
            <Label x:Name="WordofPowerment"
                   FontSize="18"
                   HorizontalOptions="Center" />
            <Label Text="Add a goal to complete within 24 hrs"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </StackLayout>
        <StackLayout Grid.Row="1"
                     VerticalOptions="End">
            <Button Text="Add"
                    x:Name="GoalPress"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Clicked="InitGoalButton" />
        </StackLayout>
    </Grid>
</ContentPage>